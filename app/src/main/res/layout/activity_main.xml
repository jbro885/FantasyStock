<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/skyline_tiny"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/ivBackgroundBlurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/skyline_tiny_blurred"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:id="@+id/rlDim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000">
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/fragment_chart"
                android:id="@+id/fCharts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="82dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flWatchListHolder"
                android:layout_below="@id/fCharts">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flNewsListHolder"
                android:layout_below="@id/flWatchListHolder">
            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

    <include layout="@layout/toolbar"/>
</RelativeLayout>





