<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/skyline_tiny"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/ivBackgroundBlurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/skyline_tiny_blurred"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:id="@+id/rlDim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000">
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/fragment_chart"
                android:id="@+id/fCharts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="82dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvTitleWatchlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fCharts"
                android:elevation="600dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="@color/transparent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Watchlist"
                        android:textColor="@color/white"
                        android:id="@+id/tvTitleWatchlist"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flWatchListHolder"
                android:layout_below="@id/cvTitleWatchlist">
            </FrameLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cvTitleNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flWatchListHolder"
                android:elevation="600dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="@color/transparent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="News"
                        android:textColor="@color/white"
                        android:id="@+id/tvTitleNews"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flNewsListHolder"
                android:layout_below="@id/cvTitleNews">
            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

    <include layout="@layout/toolbar"/>
</RelativeLayout>





