<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/skyline_tiny"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/ivBackgroundBlurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/skyline_tiny_blurred"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:id="@+id/rlDim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000">
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="82dp"
                android:text="100.00"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:fontFamily="@string/font_sans_serif_light"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tvChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTotal"
                android:text="+100 ( 2% )"
                android:textSize="20sp"
                android:textColor="#ff13CC52"
                android:fontFamily="@string/font_sans_serif_regular"
                android:gravity="center_horizontal"
                />

            <include layout="@layout/fragment_chart"
                android:id="@+id/fCharts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvChanges" />

            <include layout="@layout/item_title"
                android:id="@+id/cvTitle"
                android:layout_below="@+id/fCharts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flWatchListHolder"
                android:layout_below="@id/cvTitle">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flNewsListHolder"
                android:layout_below="@id/flWatchListHolder">
            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

    <include layout="@layout/toolbar"/>
</RelativeLayout>
