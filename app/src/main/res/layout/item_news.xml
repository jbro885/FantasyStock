<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:elevation="600dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/tvTitle"
                android:textSize="@dimen/news_title_text_size"
                android:textStyle="bold"
                android:fontFamily="@string/font_sans_serif_light"
                android:transitionName="newsTitle"
                android:layout_alignTop="@+id/ivImage"
                android:layout_toLeftOf="@+id/ivImage"
                android:layout_alignLeft="@+id/tvPublisher"
                android:layout_alignStart="@+id/tvPublisher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:id="@+id/tvSummary"
                android:textSize="12sp"
                android:ellipsize="end"
                android:fontFamily="@string/font_sans_serif_light"
                android:layout_below="@+id/tvTitle"
                android:layout_toLeftOf="@+id/ivImage"
                android:layout_alignLeft="@+id/tvPublisher"
                android:layout_alignStart="@+id/tvPublisher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textSize="10sp"
                android:id="@+id/tvPublished"
                android:fontFamily="@string/font_sans_serif_light"
                android:layout_alignBottom="@+id/ivImage"
                android:layout_toLeftOf="@+id/ivImage"
                android:layout_toStartOf="@+id/ivImage"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financial Times"
                android:textSize="10sp"
                android:id="@+id/tvPublisher"
                android:textStyle="italic"
                android:fontFamily="@string/font_sans_serif_light"
                android:layout_alignTop="@+id/tvPublished"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

            <ImageView
                android:layout_width="@dimen/news_image_width"
                android:layout_height="@dimen/news_image_width"
                android:id="@+id/ivImage"
                android:layout_margin="1dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:transitionName="newsImage"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>