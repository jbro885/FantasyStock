<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:id="@+id/tvQuoteSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@string/font_sans_serif_regular"
        android:text="Buy AAPL"/>

    <TextView
        android:id="@+id/tvTransactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQuoteSymbol"
        android:layout_alignBottom="@+id/tvShares"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryGreyDark"
        android:fontFamily="@string/font_sans_serif_light"
        android:text="12/31/2015"/>

    <TextView
        android:id="@+id/tvEquityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tvQuoteSymbol"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@string/font_sans_serif_light"
        android:text="+$13,000"/>
    <TextView
        android:id="@+id/tvShares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEquityValue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryGreyDark"
        android:fontFamily="@string/font_sans_serif_light"
        android:text="25 shares at $100.00"/>

</RelativeLayout>