<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.fantasystock.fantasystock.Activities.SearchActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/darkBlue">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="26dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">
            <EditText
                android:id="@+id/etSearchQuote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/colorPrimaryGreyDark"
                android:hint="Type a Quote..."
                android:minWidth="300dp"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#BBCCEE"
                android:imeOptions="actionDone" />
            <ImageButton
                android:id="@+id/ibSearchButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/etSearchQuote"
                android:src="@drawable/ic_search"
                android:background="@color/transparent"
                android:tint="@color/colorPrimaryGreyDark"
                />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"/>

</RelativeLayout>
