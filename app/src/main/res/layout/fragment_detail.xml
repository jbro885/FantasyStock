<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.fantasystock.fantasystock.Activities.DetailActivity">
    <TextView
        android:id="@+id/tvSymbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AAPL"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@string/font_sans_serif_medium"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSymbol"
        android:text="Apple Inc."
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@string/font_sans_serif_light"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:text="100.00"
        android:textSize="40sp"
        android:textColor="@color/colorPrimaryGreyDark"
        android:fontFamily="@string/font_sans_serif_regular"
        android:gravity="center_horizontal"
        />

    <include layout="@layout/fragment_chart"
        android:id="@+id/fDetailCharts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrice" />

    <LinearLayout
        android:id="@+id/llTransactionOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fDetailCharts"
        android:padding="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnBuy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.5"
            android:text="Buy"
            />
        <Button
            android:id="@+id/btnSell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fCharts"
            android:layout_toRightOf="@id/btnBuy"
            android:layout_weight="0.5"
            android:text="Sell"
            />
    </LinearLayout>

    <include layout="@layout/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTransactionOptions"
        />

    <FrameLayout
        android:id="@+id/flMainListHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>



</RelativeLayout>